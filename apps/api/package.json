{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "prisma generate",
    "build": "tsup src/index.ts --silent --sourcemap",
    "dev": "run-p dev:build dev:start",
    "dev:build": "tsup src/index.ts --silent --watch",
    "dev:start": "nodemon --delay 0.5 --watch ../../packages --watch dist dist/index.js",
    "// deploy": "Builds packages/types first (via Turbo), then builds API, runs Prisma migrations and generates client",
    "deploy": "npm ci && cd ../.. && npx turbo run build --filter=api && cd apps/api && npx prisma migrate deploy && npx prisma generate",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "full-clean": "rm -rf .turbo dist node_modules",
    "clean": "rm -rf .turbo dist",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:pull": "prisma db pull",
    "prisma:reset": "prisma migrate reset",
    "daily-notifications": "tsx src/scripts/daily-notifications.ts -- --run-daily-notifications",
    "daily-notifications:build": "tsup src/scripts/daily-notifications.ts --silent --sourcemap",
    "daily-notifications:run": "node dist/daily-notifications.js -- --run-daily-notifications",
    "daily-notifications:cron-exec": "npm ci && npx prisma generate && npm run daily-notifications:build && npm run daily-notifications:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.21.1",
    "supertest": "^6.3.4",
    "turbo": "^1.13.2",
    "typescript": "^5.4.4",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@clerk/backend": "^2.18.3",
    "@occasions/types": "*",
    "@prisma/client": "^5.21.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "http-status": "^1.7.4",
    "tsup": "^8.0.2",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.4"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
